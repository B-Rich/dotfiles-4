# Conky Dockapp configuration

# Run flags
background yes
update_interval 4
total_run_times 0

# Text
use_xft yes
xftfont Monaco:size=7
xftalpha 1.0
override_utf8_locale yes
use_spacer left

# Dockapp-ify
own_window yes
own_window_type dock
own_window_colour gray3
maximum_width 64
minimum_size 64 64
alignment tl

# Drawing
double_buffer yes
draw_shades yes
draw_borders no
border_margin 5

# Colors
default_color gray20
default_shade_color black

# Individual Monitor Settings
cpu_avg_samples 2
net_avg_samples 2
if_up_strictness address

mpd_host localhost
mpd_port 6600


TEXT
${color SteelBlue}${font Monaco:bold:size=11}${time %H:%M}$font
${color gray}${time %a, %d %b %y}

${color gray}$nodename

$freq MHz
${cpugraph cpu1 DDDDDD 1992d6}
${color gray}cpu ${color white}${cpu cpu1}%
${color gray}ram ${color white}$memperc%
${color gray}swp ${color white}${swapperc}%

${color gray}temp${color white}${acpitemp}Â°
$loadavg
${color gray}up ${color white}$uptime
$user_number users${if_up wlan0}

${color gray}wlan0
${color white}${wireless_essid wlan0}
${color gray}${downspeedgraph wlan0 25,29 DDDDDD 1992d6 1280 -l} ${upspeedgraph wlan0 25,29 DDDDDD 1992d6 1280 -l}
${color gray}rx${color white}${downspeed wlan0}
${color gray}tx${color white}${upspeed wlan0}
$endif${if_up eth0}

${color gray}eth0
${color gray}${downspeedgraph eth0 25,29 DDDDDD 1992d6 12800 -l} ${upspeedgraph eth0 25,29 DDDDDD 1992d6 12800 -l}
${color gray}rx${color white}${downspeed eth0}
${color gray}tx${color white}${upspeed eth0}
$endif
${color gray}diskio
${diskiograph DDDDDD 1992d6}
${color gray}/${color white} ${fs_used_perc /}%

${color gray}BAT0
${color white}${battery_short BAT0}
-${battery_time BAT0}
