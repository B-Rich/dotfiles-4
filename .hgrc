[ui]
username = Seth House <seth@eseth.com>
ignore = ~/.hgignore

[alias]
ll = log --limit 5 --template '{rev}:{node|short}\t{date|age} ago\t{author|person}\n\t- {files}\n\t{desc|strip|fill68|tabindent}\n\n'

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.premerge = True
vimdiff.gui = False

[web]
allow_archive = bz2 gz
port = 8001

[extensions]
color =
alias =
hgext.graphlog  =
hgext.purge =
hgext.record =
hgext.rebase = 
hgext.bookmarks =
svn = /usr/local/lib/python/site-packages/hgsubversion
