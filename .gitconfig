[user]
    email = seth@eseth.com
    name = Seth House

[alias]
    st = status -s -b
    ci = commit
    co = checkout
    d = diff
    b = branch -v
    f = fetch --all

    l = log --pretty=format:\"%C(yellow)%h %C(green)%d%Creset %s  %C(black bold)%an, %ar%Creset\"
    ll = !git l --graph
    lll = log --stat --decorate

    # page = !eval less -f '<(git show '${^$(git rev-list -20 @{u}..)}\)

    # new commits after you fetched
    lc = log ORIG_HEAD.. --stat --no-merges

    serve = !git daemon --base-path=$(git rev-parse --show-toplevel) --export-all

[core]
    excludesfile = /home/shouse/.gitignore

[color]
    diff = always
    status = auto
    branch = auto

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = whiteinge@gmail.com
    smtpserverport = 587

[merge]
    tool = vimdiffconflicts

[mergetool "vimdiffconflicts"]
    cmd = unmerge.sh $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
