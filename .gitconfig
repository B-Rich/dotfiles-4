[user]
    email = seth@eseth.com
    name = Seth House

[alias]
    st = status -s -b
    ci = commit
    co = checkout
    d = diff
    b = branch -v
    bc = branch --contains
    f = fetch --all
    re = reset --hard @{upstream}

    l = log --oneline --decorate
    ll = log --stat --decorate --abbrev-commit --date=relative
    rl = reflog  --date=relative 
    short = rev-parse --short
    m = merge --no-ff

    serve = "!git daemon --base-path=$(git rev-parse --show-toplevel) --export-all"

    # Show all remote branches that have been merged into master
    allmerged = "!git branch -r -v --no-abbrev --merged master | \
        awk '!/master|HEAD/ { print $2,$1 }'"

    ### Custom Git commands (found in ~/bin)
    # Push only the current branch to the upstream branch
    p = pushcurrent

    # Show individual diffs for all incoming/outgoing changesets
    in = pagediffs ..@{u}
    out = pagediffs @{u}..

[core]
    excludesfile = /home/shouse/.gitignore

[color]
    diff = auto
    status = auto
    branch = auto

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = whiteinge@gmail.com
    smtpserverport = 587

[merge]
    tool = vimdiffunmerge

[mergetool "vimdiffunmerge"]
    cmd = unmerge.sh vim $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
    keepBackup = false

[mergetool "gvimdiffunmerge"]
    cmd = unmerge.sh gvim $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
    keepBackup = false
