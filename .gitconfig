[user]
    email = seth@eseth.com
    name = Seth House

[alias]
    st = status
    ci = commit
    co = checkout
    d = diff
    b = branch -v

    l = log --pretty=format:\"%C(yellow)%h%Creset %s  %C(black bold)%an, %ar%Creset\"
    ll = !git l --graph
    lll = log -p --stat

    # new commits after you fetched
    lc = log ORIG_HEAD.. --stat --no-merges

    incoming = !git-incoming
    outgoing = !git-outgoing
    addremove = !git-addremove

    serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git

[core]
    excludesfile = /home/shouse/.gitignore

[color]
    diff = auto
    status = auto
    branch = auto
